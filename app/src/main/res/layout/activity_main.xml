<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/activity_main_linearLayout_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_linearLayout_encyclopedia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_linearLayout_encyclopedia"
        app:layout_constraintTop_toTopOf="@+id/activity_main_linearLayout_encyclopedia">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/reminder"
            android:src="@drawable/ic_access_alarm_green_64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reminder"
            tools:text="@string/reminder" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_linearLayout_flower_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/activity_main_linearLayout_encyclopedia"
        app:layout_constraintStart_toStartOf="@+id/activity_main_linearLayout_encyclopedia"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_linearLayout_encyclopedia"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/flower_shop"
            android:src="@drawable/ic_shopping_basket_pink_64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/flower_shop"
            tools:text="@string/flower_shop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_linearLayout_register_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/activity_main_linearLayout_flower_shop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_main_linearLayout_flower_shop"
        app:layout_constraintTop_toTopOf="@+id/activity_main_linearLayout_flower_shop"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/register_shop"
            android:src="@drawable/ic_store_blue_64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_shop"
            tools:text="@string/register_shop" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/activity_main_linearLayout_encyclopedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:contentDescription="@string/encyclopedia"
            android:src="@drawable/ic_book_light_green_64dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/encyclopedia"
            tools:text="@string/encyclopedia" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>